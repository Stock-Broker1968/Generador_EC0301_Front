# ==================================================
# BACKEND CONFIGURATION
# ==================================================
# URL del backend (sin / al final)
BACKEND_URL=https://ec0301-globalskillscert-backend.onrender.com

# Alternativamente para desarrollo local:
# BACKEND_URL=http://localhost:3000

# ==================================================
# WHATSAPP API (para envío de códigos)
# ==================================================
# Proveedor recomendado: Twilio, MessageBird, o WhatsApp Business API
WHATSAPP_API_URL=https://api.twilio.com/2010-04-01/Accounts
WHATSAPP_ACCOUNT_SID=your_account_sid_here
WHATSAPP_AUTH_TOKEN=your_auth_token_here
WHATSAPP_FROM_NUMBER=+52XXXXXXXXXX

# ==================================================
# EMAIL CONFIGURATION (Backup para códigos)
# ==================================================
# SMTP para SendGrid, Mailgun, o similar
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here
SMTP_FROM=noreply@skillscert.com

# ==================================================
# DATABASE CONFIGURATION
# ==================================================
# MongoDB, PostgreSQL, o Firebase
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/ec0301
# O para PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/ec0301

# ==================================================
# JWT & SECURITY
# ==================================================
# Genera un secret seguro con: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRATION=24h

# Encriptación de códigos de acceso
ENCRYPTION_KEY=your_32_character_encryption_key

# ==================================================
# APPLICATION SETTINGS
# ==================================================
# Entorno: development, staging, production
NODE_ENV=development

# Puerto del servidor backend
PORT=3000

# CORS Origins permitidos (separados por comas)
CORS_ORIGINS=http://localhost:3000,https://tu-dominio.com

# ==================================================
# PRICING & FEATURES
# ==================================================
# Precio en centavos (500 MXN = 50000 centavos)
PRODUCT_PRICE=50000
CURRENCY=MXN

# Duración del código de acceso (en horas)
ACCESS_CODE_VALIDITY=48

# ==================================================
# LOGGING & MONITORING
# ==================================================
# Level: error, warn, info, debug
LOG_LEVEL=info

# Sentry DSN para tracking de errores (opcional)
SENTRY_DSN=https://your_sentry_dsn_here

# ==================================================
# RATE LIMITING
# ==================================================
# Máximo de requests por ventana de tiempo
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ==================================================
# FRONTEND CONFIGURATION
# ==================================================
# URL del frontend (para redirects)
FRONTEND_URL=https://tu-dominio.com

# Google Analytics ID (opcional)
GA_TRACKING_ID=G-XXXXXXXXXX

# ==================================================
# NOTAS IMPORTANTES
# ==================================================
# 1. NUNCA subas el archivo .env real a GitHub
# 2. Usa variables de entorno en tu hosting (Vercel, Netlify, Render)
# 3. Rota las claves regularmente
# 4. Usa diferentes claves para dev/staging/production
# 5. Documenta cambios importantes en este archivo
